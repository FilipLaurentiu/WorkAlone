@model NetRomSummerCampApp.ViewModel.AnnouncementViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="form-horizontal" style="margin:5%"  align="center">
    @using (Html.BeginForm("CreateAnnouncement", "Home", FormMethod.Post))
    {
        <div class="form-group-lg">
            @Html.ValidationSummary(true)
            @Html.LabelFor(x => x.Title)
            <br />
            @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
           
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        </div>
       

        <div class="form-group-lg">
            @Html.Label("Category")
            @Html.DropDownListFor(m => m.CategoryId, Model.Categorys.Select(item => new SelectListItem
   {
       Value = item.Id.ToString(),
       Text = item.Name.ToString(),
       Selected = "select" == item.Name.ToString()
   }), new { @class = "form-control" })
        </div>

        <div class="form-group-lg">
            @Html.LabelFor(x => x.Phonenumber)
            <br />
            @Html.ValidationMessageFor(x => x.Phonenumber, null, new { @class = "text-danger" })
            @Html.TextBoxFor(x => x.Phonenumber, new { @class = "form-control" })
        </div>

      
        <div class="form-group-lg">
            @Html.LabelFor(x => x.Email)
            <br />
            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        </div>

        <div class="form-group-lg">
            @Html.LabelFor(x => x.Description)
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })


            <div class="form-group" >
             

                <button type="submit" class="btn btn-success" style="margin:1.5% 0.5%"><span class="glyphicon glyphicon-ok"> &emsp;</span>Submit</button>

                <div class = "btn btn-danger" style="margin:1.5% 0.5%">
                    <span class="glyphicon glyphicon-remove">&emsp;</span>
                    @Html.ActionLink("Cancel", "Index",null, new { style = "color:white" })
                </div>
                </div>
            </div>

            }
        </div>
