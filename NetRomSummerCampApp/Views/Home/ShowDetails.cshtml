@model NetRomSummerCampApp.Models.Review  

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="panel panel-default" style="margin:2%">
    <div class="panel-heading">
        <h2>@ViewBag.announcement.Title</h2>

    </div>
    <div class="panel-body">
        <h3>@ViewBag.announcement.CategoryName</h3>
        <p>@ViewBag.announcement.Description</p>
       
    </div>
  
    <div class="panel-footer">
        <div align="left" >Status
            @if (@ViewBag.announcement.Closed == false)
            {
                <p class="text-success">Open </p>
            }
            else
            {
                <p class="text-danger">Closed</p>
            }
        </div>
       
        <div align="right">
            @Html.ActionLink("Close", "Close", "EditAnnouncement", new { id = @ViewBag.announcement.Id }, null)
            @Html.ActionLink("Extend", "Extend", "EditAnnouncement", new { id = @ViewBag.announcement.Id }, null)
        </div>
      
    </div>
  </div>







<div class="container" align="center" style="padding:5%">
@Html.Partial("NewComment", Model)
</div>



<div class="container">
    @foreach (var c in ViewBag.Comments)
    {

        <div class="panel panel-default">
            <div class="panel-heading">
                @c.Username
            <p> Star: @c.Rating</p>
        </div>
        <div class="panel-body">@c.Comment</div>

    </div>

    }
</div>



